<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script>
        (function() {
            // restaurar tema
            const saved = localStorage.getItem("zap-theme");
            const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
            const theme = saved || (prefersDark ? "dark" : "light");

            if (theme === "dark") {
                document.documentElement.setAttribute("data-theme", "dark");
            }

            // restaurar tamaño de fuente
            const savedFontSize = sessionStorage.getItem("fontSize");
            if (savedFontSize) {
                document.documentElement.style.setProperty("--zoom", savedFontSize);
            }

            // restaurar modo de contraste
            const savedContrastMode = sessionStorage.getItem("contrastMode");
            if (savedContrastMode && savedContrastMode !== "normal") {
                // añadir clase al body cuando se cargue
                document.addEventListener("DOMContentLoaded", function() {
                    document.body.classList.add(savedContrastMode);
                });
            }
        })();
    </script>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/bootstrap-icons/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@200;300;400;500;600;700;800;900&family=Instrument+Serif:ital,wght@0,400;0,600;1,400&family=Inter:wght@100..900&display=swap"
        rel="stylesheet">
            <!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">-->
</head>
