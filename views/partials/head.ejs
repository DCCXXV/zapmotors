<head>
    <!-- el rojo es falso positivo, no hacer caso -->
    <script> 
        <% if (user) { %>
            window.userId = <%= user.id %>;
            <% if (user.preferences) { %>
                window.userPreferences = <%- JSON.stringify(user.preferences) %>;
            <% } %>
        <% } %>
    </script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script>
        (function() {
            // inicializar preferencias desde DB o localStorage
            if (window.userId && window.userPreferences) {
                // usuario logueado: usar DB
                window.currentPreferences = {
                    theme: window.userPreferences.theme || "light",
                    fontSize: window.userPreferences.fontSize || "1",
                    contrastMode: window.userPreferences.contrastMode || "normal"
                };
            } else {
                // usuario NO logueado: usar localStorage
                window.currentPreferences = {
                    theme: localStorage.getItem("zap-theme") || null,
                    fontSize: sessionStorage.getItem("fontSize") || "1",
                    contrastMode: sessionStorage.getItem("contrastMode") || "normal"
                };
            }

            // aplicar preferencias
            const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
            const finalTheme = window.currentPreferences.theme || (prefersDark ? "dark" : "light");

            if (finalTheme === "dark") {
                document.documentElement.setAttribute("data-theme", "dark");
            }

            if (window.currentPreferences.fontSize) {
                document.documentElement.style.setProperty("--zoom", window.currentPreferences.fontSize);
            }

            // actualizar currentPreferences con el tema final
            window.currentPreferences.theme = finalTheme;
        })();
    </script>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/bootstrap-icons/bootstrap-icons.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Unbounded:wght@200;300;400;500;600;700;800;900&family=Instrument+Serif:ital,wght@0,400;0,600;1,400&family=Inter:wght@100..900&display=swap"
        rel="stylesheet">
    <!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">-->
</head>
