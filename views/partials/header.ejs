<!DOCTYPE html>
<html lang="es">
    <%- include("head", {title: title}) %>

    <body class="inter-regular w-100 zoom">
        <header class="py-0 sticky-top">
            <nav class="navbar navbar-expand-lg py-0">
                <p id="nav-title" class="bbh-sans-bartle-regular mx-4 my-0 h2">
                    Zap
                </p>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a
                            class="nav-link px-4 py-3 <%= activePage === 'inicio' ? 'active' : '' %>"
                            href="/"
                        >
                            Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link px-4 py-3 <%= activePage === 'vehiculos' ? 'active' : '' %>"
                            href="/vehiculos"
                            >Vehículos
                        </a>
                    </li>
                    <% if (user) {%>
                        <li class="nav-item">
                            <a
                                class="nav-link px-4 py-3 <%= activePage === 'reservas' ? 'active' : '' %>"
                                href="/reservar"
                                >Reservar
                            </a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a
                            class="nav-link px-4 py-3 <%= activePage === 'contacto' ? 'active' : '' %>"
                            href="/contacto"
                            >Contacto
                        </a>
                    </li>
                    <!--
                    <li class="nav-item">
                        <a class="nav-link external-link px-4 py-3" href="https://www.ucm.es/">Universidad Complutense
                            de Madrid ↗</a>
                    </li>-->
                </ul>
                <div class="ms-auto d-flex align-items-center gap-2">
                    <button
                        id="accessibility"
                        class="border-1"
                        type="button"
                        data-bs-toggle="modal"
                        data-bs-target="#accessibilityModal"
                        aria-label="Accesibilidades"
                    >
                        <span><i class="bi bi-universal-access"></i></span>
                    </button>

                    <% if(!user) {%>
                    <a
                        id="login-btn"
                        href="/login"
                        class="btn btn-white rounded-0 me-2"
                        >Login</a
                    >
                    <!-- <a
                        id="signup-btn"
                        href="/registro"
                        class="btn btn-dark rounded-0 me-2"
                        >Registro</a
                    > -->
                    <%} else {%>
                    <% if(user.rol === "admin") {%>
                    <a href="/admin" class="btn btn-dark rounded-0">
                        Administración
                    </a>
                    <% }else {%>
                    <a href="/empleado" class="btn btn-dark rounded-0">
                        Panel
                    </a>
                        <%} %>
                    <div class="rounded-0 mb-0 border border-0 border-dark ">
                        <%= user.nombre %>
                    </div>
                    <a href="/logout" class="btn btn-danger rounded-0 me-2">Cerrar sesión</a>
                    <% } %>
                </div>
            </nav>
        </header>
        <main>

        <div class="modal fade" id="accessibilityModal" tabindex="-1" aria-labelledby="accessibilityModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="accessibilityModalLabel">Opciones de accesibilidad</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body text-center">
                    <button
                        id="theme-toggle"
                        class="border-0"
                        type="button"
                        aria-label="Cambiar tema"
                    >
                        <span id="theme-img" class="d-inline-block">
                            <i class="bi bi-brightness-high"></i>
                        </span>
                    </button>

                    <select id="zoom" class="form-select">
                        <option value="1" selected>100%</option>
                        <option value="1.2">120%</option>
                        <option value="1.5">150%</option>
                        <option value="2">200%</option>
                    </select>

                </div>




                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cerrar
                    </button>
                </div>

                </div>
            </div>
        </div>
    </body>
