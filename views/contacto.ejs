<%- include('partials/header', { title: 'Contacto - Zap', activePage: 'contacto' }) %>

<section id="contacto" class="m-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 bg-zapgrey p-4 border border-2">
            <h2>Contacto</h2>
            <fieldset class="mx-auto">
                <legend>Formulario de las reservas</legend>
                <form action="">
                    <div class="d-flex gap-2 mb-2">
                        <div class="d-flex flex-column w-50">
                            <label for="nombre">Nombre: </label>
                            <input type="text" name="nombre" placeholder="John Doe" required class="form-text rounded-0 p-2 border-1 border-dark" />
                        </div>
                        <div class="d-flex flex-column w-50">
                            <label for="correo-electronico">Correo electr√≥nico:</label>
                            <input
                                type="email"
                                name="correo-electronico"
                                required
                                placeholder="johndoe@example.com"
                                class="form-text rounded-0 p-2 border-1 border-dark"
                            />
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <label for="mensaje">Mensaje: </label>
                        <textarea class="form-control rounded-0 border-1 border-dark" id="mensaje" name="mensaje" rows="10"></textarea>
                    </div>
                    <button class="btn btn-dark rounded-0 mt-4 px-4" type="submit">
                        Enviar
                    </button>
                </form>
            </fieldset>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
