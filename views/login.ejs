<%- include('partials/header', { title: 'Iniciar_sesión - Zap' , activePage:
'none' }) %>
<section
    id="registroSection"
    class="d-flex w-75 bg-zapgrey mx-auto mt-5 border"
>
    <fieldset class="w-50 p-4 d-flex flex-column">
        <legend class="text-center">Iniciar sesión</legend>
        <form
            id="iniciarSesionForm"
            method="post"
            action="/login"
            class="d-flex flex-column flex-grow-1"
        >
            <div
                class="d-flex flex-column gap-4 flex-grow-1 justify-content-center"
            >
                <div class="d-flex flex-column gap-2">
                    <label for="email">Correo electrónico: </label>
                    <input
                        id="email"
                        name="email"
                        type="email"
                        title="Debe ser un correo corporativo (@zapmotors.com)"
                        placeholder="usuario@zapmotors.com"
                        required
                        class="border p-2"
                    />
                </div>
                <div class="d-flex flex-column gap-2">
                    <label for="password">Contraseña: </label>
                    <div class="input-group">
                        <input
                            id="passwordInput"
                            name="password"
                            type="password"
                            placeholder="Introduce tu contraseña"
                            class="border p-2 border-end-0 outline-0 form-control"
                            required
                        />
                        <span id="show-btn" class="input-group-text btn-dark">
                            <i class="bi bi-eye-slash-fill"></i>
                        </span>
                    </div>
                </div>
                <% if (typeof error !=='undefined' && error) { %>
                <p class="text-danger mt-1"><%= error %></p>
                <% } %>
            </div>
            <button class="btn btn-dark rounded-0 mt-auto" type="submit">
                Iniciar sesión
            </button>
        </form>
    </fieldset>
    <img class="w-50" src="/img/ev2.jpg" alt="" />
</section>
<script src="js/index.js"></script>

<%- include('partials/footer') %>
